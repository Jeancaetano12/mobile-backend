
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Define o "cliente" que o NestJS usar√° para falar com o banco
generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  primeiroNome String
  nomeCompleto String
  senha        String

  role Role   @default(USER) 
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}